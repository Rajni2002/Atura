{
  "name": "Extension Demo",
  "version": "1.0",
  "description": "Build an Basic Extension!",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./img/icon16.png",
      "32": "/img/icon48.png",
      "48": "/img/icon48.png",
      "128": "/img/icon48.png"
    }
  },
  "icons": {
    "16": "/img/icon16.png",
    "32": "/img/icon48.png",
    "48": "/img/icon48.png",
    "128": "/img/icon48.png"
  },
  "manifest_version": 3
}
